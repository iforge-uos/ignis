{
   "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
   "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "lineWidth": 120,
      "indentWidth": 2,
      "indentStyle": "space"
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useCollapsedElseIf": "warn",
        "useImportType": "off"
      },
      "complexity": {
        "useSimplifiedLogicExpression": "warn",
        "noUselessTernary": "warn"
      },
      "correctness": {
        "useHookAtTopLevel": "error",
        "noUnusedVariables": "warn",
        "noConstantCondition": "off"
      }
    }
  }
}
