{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["../../packages/db/*"],
      "@types/*": ["../../packages/types/*"],
      "@ui/*": ["../../packages/ui/*"],
      "@ignis/types": ["../../packages/types/src/index"],
      "@ignis/types/*": ["../../packages/types/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/errors" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/db" }
  ]
}
