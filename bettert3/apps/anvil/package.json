  "license": "GPL-3.0-or-later",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "OP_ACCOUNT=iforge.1password.com op run --no-masking --env-file=../../config/anvil/.env.development.tpl -- bun run --hot src/index.ts",
    "start": "bun run dist/src/index.js",
    "regen": "bun run --filter db regen"
  },
  "dependencies": {
    "@gel/ai": "0.1.1",
    "@gel/auth-express": "^0.3.0",
    "@packages/serialiser": "workspace:*",
    "@packages/types": "workspace:*",
    "@packages/ui": "workspace:*",
    "@js-temporal/polyfill": "^0.4.4",
    "@orpc/openapi": "^1.4.2",
    "@orpc/server": "^1.4.2",
    "@orpc/zod": "^1.4.2",
    "axios": "^1.9.0",
    "bull": "^4.16.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "gel": "2.0.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "jsx-email": "^2.7.2",
    "ldapts": "^7.4.0",
    "nodemailer": "^6.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "tsc-alias": "^1.8.11",
