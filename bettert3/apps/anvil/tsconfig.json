{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["../../packages/db/*"],
      "@packages/types": ["../../packages/types/src/index"],
      "@packages/types/*": ["../../packages/types/src/*"],
      "@packages/email/*": ["../../packages/email/*"]
    },
    "outDir": "./dist",
    "types": ["bun"],
    "jsx": "react-jsx",
    "composite": true
  },
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/db" },
    { "path": "../../packages/email" }
  ],
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
