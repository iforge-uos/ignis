{
  "name": "anvil",
  "version": "1.0.0",
  "description": "Anvil is the Backend to Ignis powered by NestJS",
  "author": "iForge IT team",
  "license": "GPL-3.0-or-later",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "cross-env OP_ACCOUNT=iforge.1password.com op run --env-file=../../config/anvil/.env.development.tpl -- nest start",
    "dev": "cross-env OP_ACCOUNT=iforge.1password.com op run --env-file=../../config/anvil/.env.development.tpl -- nest start --watch --preserveWatchOutput",
    "start:debug": "cross-env OP_ACCOUNT=iforge.1password.com op run --env-file=../../config/anvil/.env.development.tpl -- nest start --debug --watch --preserveWatchOutput",
    "start:prod": "cross-env OP_ACCOUNT=iforge.1password.com op run --env-file=../../config/anvil/.env.production.tpl -- node dist/src/main",
    "start:prod:docker": "node dist/src/main.js",
    "start:email": "cross-env OP_ACCOUNT=iforge.1password.com op run --env-file=../../config/anvil/.env.development.tpl -- email preview src/email/templates",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "regen": "pnpm exec generate interfaces -I ignis && pnpm exec generate edgeql-js --target=ts -I ignis && pnpm exec generate queries --target=ts -I ignis && pnpm edgedb-zod --target=ts",
    "seed": "ts-node -r tsconfig-paths/register src/seed.ts"
  },
  "dependencies": {
    "@casl/ability": "^6.7.3",
    "@edgedb/generate": "0.6.0-canary.20250213T002834",
    "@ignis/errors": "workspace:*",
    "@ignis/ts-config": "workspace:*",
    "@ignis/types": "workspace:*",
    "@nestjs/bull": "^10.2.3",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/schedule": "^3.0.4",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/throttler": "^5.2.0",
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.9",
    "axios-cookiejar-support": "^4.0.7",
    "bull": "^4.16.5",
    "cheerio": "1.0.0-rc.12",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "csv-parse": "^5.6.0",
    "edgedb": "1.6.0-canary.20250213T002813",
    "edgedb-zod": "github:iforge-uos/edgedb-zod#4e3c01b2ceba7c3d6c6e8b6617b076423ae33237",
    "glob": "^10.4.5",
    "googleapis": "^133.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "ioredis": "^5.5.0",
    "jsonwebtoken": "^9.0.2",
    "jsx-email": "1.10.12",
    "ldapjs": "^3.0.7",
    "ms": "^2.1.3",
    "nest-winston": "^1.10.2",
    "nestjs-zod": "^3.0.0",
    "nodemailer": "^6.10.0",
    "passport": "^0.6.0",
    "passport-discord": "^0.1.4",
    "passport-google-oauth2": "^0.2.0",
    "passport-jwt": "^4.0.1",
    "passport-ldapauth": "^3.0.1",
    "react": "^18.3.1",
    "react-email": "1.10.1",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "tailwindcss": "^3.4.17",
    "tough-cookie": "^4.1.4",
    "typescript-memoize": "^1.1.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@edgedb/generate": "^0.5.3",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/ldapjs": "^3.0.6",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.17.19",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-discord": "^0.1.14",
    "@types/passport-google-oauth2": "^0.1.10",
    "@types/passport-jwt": "^3.0.13",
    "@types/react": "^18.3.18",
    "@types/supertest": "^2.0.16",
    "@types/tough-cookie": "^4.0.5",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
