{
  "name": "ignis",
  "version": "0.1.0",
  "description": "f̸̖̿i̵̲̐r̷̨̄e̶̢̓ ̵̛̭f̸̜̏o̴̺̊r̸̥̈ ̶̟̽ẗ̴̬́h̵̻͂ë̸̻́ ̴̭̍f̸̫̉î̷̖r̴̮͒e̷͈͑ ̵̦̚g̴͓̒o̶͝ͅd̷͇̀",
  "author": "iForge IT team",
  "license": "GPL-3.0-or-later",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "check": "biome check --write .",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "env:gen": "OP_ACCOUNT=iforge.1password.com op inject -f -i .env.tpl -o .env",
    "ui:add": "bun --filter @packages/ui ui:add",
    "lint": "turbo lint --continue",
    "clean": "find . -name node_modules -o -name dist -o -name .nitro -o -name .output -o -name .tanstack -o -name .turbo -o -name .contentlayer -type d -prune | xargs rm -rf",
    "clean:emitted": "find . -name \"*.js.map\" -o -name \"*.d.ts.map\" -o -name \"*.js\" -type f -not -path \"*/node_modules/*\" -not -path \"*/dist/*\" | grep -v \"package.json\" | grep -v \"turbo.json\" | grep -v \".eslintrc.js\" | grep -v \"next.config.js\" | xargs rm -f",
    "clean:all": "bun run \"/clean|clean:emitted/\"",
    "_build": "bun run \"/build:packages|build:apps/\"",
    "build:packages": "bun run \"/build:db|build:errors|build:types|build:ui/\"",
    "build:apps": "bun --filter forge build && bun --filter anvil2 build",
    "build:db": "bun --filter db exec npx tsc --skipLibCheck",
    "build:errors": "bun --filter errors exec npx tsc --skipLibCheck",
    "build:types": "bun --filter types exec npx tsc --skipLibCheck",
    "build:ui": "bun --filter ui exec npx tsc --skipLibCheck",
    "build:watch": "bun --filter db exec npx tsc --skipLibCheck --watch",
    "lint:fix": "turbo lint:fix --continue",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "email": "bun --filter email email",
    "email-check": "bun --filter email email-check",
    "regen": "bun --filter @packages/db regen"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "turbo": "^2.5.5"
  },
  "packageManager": "bun@1.3.0"
}
