{
  "compilerOptions": {
    "module": "ES2022",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["../../apps/anvil2/src/*"],
      "@dbschema/*": ["../../apps/anvil2/dbschema/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true
  }
}
