{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["./*"],
      "@ui/components/ui*": ["./components/ui*"],
      "@ignis/types": ["../types/src/index"],
      "@ignis/types/*": ["../types/src/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../types" }
  ]
}