{
  "name": "ignis",
  "version": "0.1.0",
  "description": "f̸̖̿i̵̲̐r̷̨̄e̶̢̓ ̵̛̭f̸̜̏o̴̺̊r̸̥̈ ̶̟̽ẗ̴̬́h̵̻͂ë̸̻́ ̴̭̍f̸̫̉î̷̖r̴̮͒e̷͈͑ ̵̦̚g̴͓̒o̶͝ͅd̷͇̀",
  "author": "iForge IT team",
  "license": "GPL-3.0-or-later",
  "private": true,
  "workspaces": ["packages/*", "apps/*", "tooling/*"],
  "scripts": {
    "dev": "turbo run dev",
    "env:gen": "OP_ACCOUNT=iforge.1password.com op inject -f -i .env.tpl -o .env",
    "ui:add": "pnpm --filter ui ui:add",
    "ui:dev": "pnpm --filter ui ui:dev",
    "lint": "turbo lint --continue",
    "clean": "find . -name node_modules -o -name .next -o -name dist -o -name .turbo -o -name .contentlayer -type d -prune | xargs rm -rf",
    "clean:emitted": "find . -name \"*.js.map\" -o -name \"*.d.ts.map\" -o -name \"*.js\" -type f -not -path \"*/node_modules/*\" -not -path \"*/dist/*\" | grep -v \"package.json\" | grep -v \"turbo.json\" | grep -v \".eslintrc.js\" | grep -v \"next.config.js\" | xargs rm -f",
    "clean:all": "pnpm run \"/clean|clean:emitted/\"",
    "build": "pnpm run \"/build:packages|build:apps/\"",
    "build:packages": "pnpm run \"/build:db|build:errors|build:types|build:ui/\"",
    "build:apps": "pnpm --filter forge build && pnpm --filter anvil2 build",
    "build:db": "pnpm --filter db exec npx tsc --skipLibCheck",
    "build:errors": "pnpm --filter errors exec npx tsc --skipLibCheck",
    "build:types": "pnpm --filter types exec npx tsc --skipLibCheck",
    "build:ui": "pnpm --filter ui exec npx tsc --skipLibCheck",
    "build:watch": "pnpm --filter db exec npx tsc --skipLibCheck --watch",
    "lint:fix": "turbo lint:fix --continue",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "email": "pnpm --filter email email",
    "email-check": "pnpm --filter email email-check",
    "regen": "pnpm --filter db regen"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "cross-env": "^7.0.3",
    "turbo": "^2.4.4"
  },
  "engines": {
    "pnpm": ">=9",
    "node": ">=20"
  },
  "packageManager": "pnpm@9.12.0"
}
