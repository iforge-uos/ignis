{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["../../packages/db/*"],
      "@ignis/types": ["../../packages/types/src/index"],
      "@ignis/types/*": ["../../packages/types/src/*"],
      "@ignis/email/*": ["../../packages/email/*"]
    }
  },
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/db" },
    { "path": "../../packages/email" }
  ]
}
