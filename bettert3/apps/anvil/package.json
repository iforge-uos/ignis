    "@types/express": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/bun": "^1.2.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.29",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^18.3.23"
  }
